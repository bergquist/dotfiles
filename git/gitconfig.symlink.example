[user]
    name = AUTHORNAME
    email = AUTHOREMAIL

[color]
    ui = true

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[core]
    editor = vim
    excludefile = ~/.gitignore

[credential]
    helper = cache

[alias]
    st = status -sb
    amend = commit --amend
    d = !"git diff-index --quiet HEAD -- || clear; git --no-pager diff --patch-with-stat"
    ls = log --oneline

[push]
    default = simple